@inherits LayoutComponentBase

<PageTitle>BookManager</PageTitle>

<MudThemeProvider Theme="@Theme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Book Manager</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <MudNavMenu Color="Color.Primary">
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Home</MudNavLink>
                <MudNavLink Href="/viewallbooks" Icon="@Icons.Material.Filled.MenuBook" Match="NavLinkMatch.Prefix">Books</MudNavLink>
                <MudNavLink Href="/viewallauthors" Icon="@Icons.Material.Filled.PeopleAlt" Match="NavLinkMatch.Prefix">Authors</MudNavLink>
            </MudNavMenu>
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
            <PageComponent>
                @Body
            </PageComponent>
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme Theme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = Colors.Green.Default,
                Background = "#f5f5f5",
                AppbarBackground = Colors.Green.Default
            }
        };

    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}